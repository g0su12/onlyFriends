<!DOCTYPE html>
<html>
  <head>
    <title>Dashboard</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/stylesheets/dashboard.css" />
    <link rel='stylesheet' href='/stylesheets/index.css' />
  </head>
  <body>
    <div class="main"></div>
    <div class="containerr">
      <div class="nav-bar">
        <h3 class="title"><a href="/">Only Friends</a></h3>
        <ul class="list">
          <% if(user){ %>
            <li class="item"><a href="/admin/dashboard/users">Users</a></li> 
            <li class="item"><a href="/admin/dashboard/messages">Messages</a></li> 
            <li>|</li>
            <li class="item logout"><button></button><a href="/logout">Log out</a></button></li>
          <% } %>
        </ul>
      </div>
      <div class="content">
        <div class="managerTable">
          <h2 class="header">Messages management</h2>
          <table width="90%">
            <col style="width:3%">
            <col style="width:5%">
            <col style="width:15%">
            <col style="width:35%">
            <col style="width:20%">
            <col style="width:5%">
            <col style="width:3%">
            <thead>
              <tr>
                <th>#</th>
                <th>Username</th>
                <th>Title</th>
                <th>Message</th>
                <th>Post date</th>
                <th>Reactions</th>
                <th>Action</th>
              </tr>
            </thead>
              
                <% messages.forEach((message, index) => { %>
                  <tr>
                    <td> <%= index+1 %></td>
                    <td> <%= message.user.username %> </td>
                    <td> <%= message.title %> </td>
                    <td> <%= message.message %> </td>
                    <td> <%= message.post_date_formatted %> </td>
                    <td> <%= message.reaction_count %> </td>
                    <td> <button>Delete</button> </td>
                    
                    <!-- <td> 
                      <button onclick="showForm()">Delete</button>
                      <div class="form">
                        <h4 class="header">You really want to delete this user?</h4>
                        <form method="POST" action="/verify/admin">
                          <input value="<%- user._id %>" type="hidden" name="userIdDelete" />
                          <button type="submit" class="submit">Delete</button>
                        </form> 
                      </div>
                    </td> -->
                  </tr>
                <% }) %>
          </table>
        </div>
      </div>
    </div>  
  </body>
</html>
